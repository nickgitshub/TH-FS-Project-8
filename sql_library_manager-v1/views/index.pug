extends layout

block content
	h1 Books
	p
		a.button(href='/books/new') Create New Book
	table
		thead
			tr
				th Title
				th Author
				th Genre
				th Year
		tbody
			each book in books
				tr(class=`${book.pageClass}`)
					td
						a(href=`/books/${book.id}`)=book.title
					td=book.author
					td=book.genre
					td=book.year
	div
		ul(class='pagination')
			each page in pages
				li(class='page-number')
					a=page


	script(src='/static/js/page.js')

